{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "declarationDir": "./types",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ESNext",
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["es5", "es6"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
